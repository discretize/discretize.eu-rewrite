---
import Profession, {
  ProfessionProps,
} from "@gw2-ui/components/Profession/Profession";
import type { EliteSpecTypes, ProfessionTypes } from "@gw2-ui/data/professions";
import { getSizeStyle } from "src/utils/styles";
import type { GenericGw2Component } from "src/utils/types";

interface Props extends GenericGw2Component, ProfessionProps {
  name: EliteSpecTypes | ProfessionTypes;
}
---

<Profession
  client:visible
  {...Astro.props}
  className={`whitespace-nowrap ${Astro.props.className || ""}`.trim()}
  style={getSizeStyle(Astro.props)}
/>
