---
import MistlockInstability from "@gw2-ui/components/MistlockInstability/MistlockInstability";
import type { MistlockInstabilityTypes } from "@gw2-ui/data/mistlockInstabilities";
import { getSizeStyle } from "src/utils/styles";
import type { GenericGw2Component } from "src/utils/types";

interface Props extends GenericGw2Component {
  name: MistlockInstabilityTypes;
}
---

<MistlockInstability
  client:visible
  {...Astro.props}
  className={`whitespace-nowrap ${Astro.props.className || ""}`.trim()}
  style={getSizeStyle(Astro.props)}
/>
