---
export interface Props {
  title?: string;
  specialization?: string;
  className?: string;
}

const { title, specialization, className = "" } = Astro.props;
---

<article
  class={`mb-6 mt-4 overflow-hidden text-ellipsis embossed p-4 rounded-md shadow-xl border-[1px] border-zinc-500 dark:border-0 ${className}`}
>
  {
    (title || specialization) && (
      <div>
        <h4 class="mb-1 font-medium">{title || specialization}</h4>
        <div class="delimiter" />
      </div>
    )
  }

  <slot />
</article>

<style>
  .delimiter {
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--primary);
    max-width: 350px;
  }
</style>
